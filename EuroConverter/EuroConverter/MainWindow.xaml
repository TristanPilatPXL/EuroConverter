<Window x:Class="EuroConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EuroConverter"
        mc:Ignorable="d"
        Title="Euro to BEF converter" Height="200" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label x:Name="euroTextBox" Content="Bedrag in euro:" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Bottom"  Width="Auto" Height="Auto" Margin="50,0,0,10" FontWeight="Bold"/>
        <Label x:Name="frankTextBox" Content="Bedrag in frank:" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="Auto" Height="Auto" Margin="50,10,0,0" FontWeight="Bold"/>

        <TextBox    Height="Auto" Width="115" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="170,10,0,15" x:Name="euro" TextAlignment="Right" />
        <TextBox   Height="Auto" Width="115" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="170,15,0,0" x:Name="frank" TextAlignment="Right" />

        <Button x:Name="convertButton" Content="Convert" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="32" Width="115" Margin="0,0,50,10" Click="convert" />
        <Button x:Name="deleteButton" Content="Delete" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Top" Height="32" Width="115" Margin="0,10,50,0" Click="delete" />










    </Grid>
</Window>
